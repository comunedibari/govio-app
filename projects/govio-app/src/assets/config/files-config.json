{
  "exportLimit": 100,

  "itemRow": {
    "primaryText": [
      { "field": "filename", "type": "text" }
    ],
    "secondaryText": [
      { "field": "user.full_name", "type": "avatar", "tooltip": "user.full_name", "blockSpace": true },
      { "field": "acquired_messages", "type": "number", "icon": "send", "hideZero": false, "tooltip": "APP.TOOLTIP.AcquiredMessages", "blockSpace": true },
      { "field": "error_messages", "type": "number", "icon": "exclamation-triangle", "iconClass": "text-danger", "hideZero": false, "tooltip": "APP.TOOLTIP.ErrorMessages" }
    ],
    "metadata": {
      "text": [
        { "field": "id", "type": "cardinal", "class": "" },
        { "field": "organization.legal_name", "type": "text" },
        { "field": "service.service_name", "type": "text" },
        { "field": "template.name", "type": "text" }
      ],
      "label": [
        { "field": "status", "type": "label", "options": "status" }
      ]
    },
    "secondaryMetadata": [
      { "field": "Caricato il", "type": "message", "class": "", "emptySpace": true },
      { "field": "creation_date", "type": "date", "format": "DD-MM-YYYY", "class": "" }
    ]
  },

  "details": [
    { "label": "APP.LABEL.Filename", "field": "filename", "type": "text" },
    { "label": "APP.LABEL.Status", "field": "status", "type": "tag", "options": "status", "badged": true },
    { "label": "APP.LABEL.Organization", "field": "organization.legal_name", "type": "text" },
    { "label": "APP.LABEL.Service", "field": "service.service_name", "type": "text" },
    { "label": "APP.LABEL.Template", "field": "template.name", "type": "text" },
    { "label": "APP.LABEL.UserFullName", "field": "user.full_name", "type": "text" },
    { "label": "APP.LABEL.AcquiredMessages", "field": "acquired_messages", "type": "number" },
    { "label": "APP.LABEL.ErrorMessages", "field": "error_messages", "type": "number" },
    { "label": "APP.LABEL.CreationDate", "field": "creation_date", "type": "date", "format": "DD-MM-YYYY" },
    { "label": "APP.LABEL.Content", "field": "Scarica", "type": "download", "download": true, "icon": "upload" }
  ],

  "options": {
    "status": {
      "label": "APP.LABEL.Status",
      "small": true,
      "values": {
        "CREATED": { "label": "APP.STATUS.CREATED", "background": "#D1D100", "border": "#D1D100", "color": "#1f1f1f" },
        "PROCESSED": { "label": "APP.STATUS.PROCESSED", "background": "#A8D695", "border": "#A8D695", "color": "#1f1f1f" },
        "PROCESSING": { "label": "APP.STATUS.PROCESSING", "background": "#E87823", "border": "#E87823", "color": "#ffffff" },
        "ERROR": { "label": "APP.STATUS.ERROR", "background": "#E82323", "border": "#E82323", "color": "#ffffff" }
      }
    }
  },

  "chartOptions": {
    "chartHeight": "250px",

    "view": null,

    "showXAxis": true,
    "showYAxis": true,
    "gradient": false,
    "showLegend": true,
    "legendTitle": "Legend",
    "legendPosition": "below",
    "showXAxisLabel": false,
    "tooltipDisabled": false,
    "showText": true,
    "xAxisLabel": "",
    "showYAxisLabel": false,
    "yAxisLabel": "",
    "showGridLines": true,
    "innerPadding": "10%",
    "barPadding": 8,
    "groupPadding": 16,
    "roundDomains": true,
    "maxRadius": 10,
    "minRadius": 3,
    "showSeriesOnHover": true,
    "roundEdges": false,
    "animations": true,
    "showDataLabel": false,
    "noBarWhenZero": false,
    "trimXAxisTicks": true,
    "trimYAxisTicks": true,
    "rotateXAxisTicks": true,
    "maxXAxisTickLength": 16,
    "maxYAxisTickLength": 16,
    "strokeColor": "#FFFFFF",
    "strokeWidth": 2,
    "labels": true,

    "colorScheme": {
      "name": "custom",
      "selectable": true,
      "group": "ordinal",
      "domain": ["#96b964", "#ff8f52", "#cd4a51", "#00b862", "#afdf0a", "#a7b61a", "#f3e562", "#ff9800", "#ff5722", "#ff4514"]
    },

    "customColorScheme": {
      "REJECTED": "#ff0000",
      "PROCESSED": "#96b964",
      "FORBIDDEN": "#ff8f52",
      "Rifiutato": "#ff0000",
      "Elaborato": "#96b964",
      "Proibito": "#ff8f52",
      "Rejected": "#ff0000",
      "Processed": "#96b964",
      "Forbidden": "#ff8f52"
    },
  
    "selectedColorScheme": "natural",

    "schemeType": "ordinal"
  }
}
